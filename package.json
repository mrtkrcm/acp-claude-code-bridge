{
  "name": "@mrtkrcm/acp-claude-code",
  "version": "0.11.0",
  "description": "ACP (Agent Client Protocol) bridge for Claude Code",
  "main": "dist/cli.js",
  "type": "module",
  "bin": {
    "acp-claude-code": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrtkrcm/acp-claude-code-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/mrtkrcm/acp-claude-code-bridge/issues"
  },
  "homepage": "https://github.com/mrtkrcm/acp-claude-code-bridge#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/cli.js",
    "dev": "tsx src/cli.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --experimental-cli --write .",
    "diagnose": "node dist/index.js --diagnose",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "validate": "pnpm run typecheck && pnpm run lint && pnpm run test:run",
    "cleanup": "node scripts/cleanup.js",
    "maintenance": "node scripts/cleanup.js",
    "prepublishOnly": "pnpm run build",
    "prepare": "pnpm run build"
  },
  "keywords": [
    "acp",
    "claude",
    "claude-code",
    "zed",
    "ai-agent"
  ],
  "author": "Murat <karacamjr@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.98",
    "@zed-industries/agent-client-protocol": "0.1.2"
  },
  "devDependencies": {
    "@eslint/js": "9.17.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "11.0.1",
    "@semantic-release/npm": "12.0.2",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitest/ui": "^3.2.4",
    "conventional-changelog-conventionalcommits": "8.0.0",
    "eslint": "^9.17.0",
    "globals": "15.14.0",
    "prettier": "^3.6.2",
    "semantic-release": "24.2.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "8.20.0",
    "vitest": "^3.2.4"
  },
  "directories": {
    "test": "test"
  },
  "types": "./dist/cli.d.ts"
}
